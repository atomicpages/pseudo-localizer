{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "resolveJsonModule": true,
    "sourceMap": true,
    "pretty": true,
    "strict": true
  },
  "include": ["src/"],
  "exclude": ["src/__tests__"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
